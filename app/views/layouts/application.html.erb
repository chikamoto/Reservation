<!DOCTYPE html>
<html>
  <head>
    <title>Myapp3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>

   <header>
    <div class="header-inner">
     <div class="header-left">
     <%= link_to("http://127.0.0.1:3000/") do %>
      <img alt="ロゴ画像" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png">
     <% end %> 
       <div class="search-box">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
         <%= f.text_field :search, placeholder: "エリア" %>
         <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
       </div>      
     </div>
   
     <div class="header-right">
      <% if user_signed_in? %>
       <img src='<%= current_user.avatar %>' class = "icon_image">
       <%= link_to current_user.name  %>
       <div onclick="obj=document.getElementById('menu1').style; obj.display=(obj.display=='none')?'block':'none';">
        <a style="cursor:pointer;">▼メニュー</a>
       </div>
       <div id="menu1" style="display:none;clear:both;">
        <div class="menu-container">
         <p><%= link_to "ルーム登録", :new_room %></p>
         <p><%= link_to "登録ルーム一覧", :rooms %></p>
         <p><%= link_to "予約ルーム一覧", :reservations %></p>
         <p><%= link_to "設定", edit_user_registration_path %></p>
         <%= link_to 'ログアウト' ,destroy_user_session_path, class: 'dropdown-item', method: :delete%>
        </div>
       </div>
       <% else %>

       <%= link_to("http://127.0.0.1:3000/users/sign_in") do %>
        <button type="button" class="btn-primary">ログイン</button>
       <% end %>
       <%= link_to("http://127.0.0.1:3000//users/sign_up") do %>
        <button type="button" class="btn-secondary">新規登録</button>
       <% end %>
       <% end %>
     
    </div>
   </header>

   <%= yield %>
   
 <footer>
  <p>© 2020 POTEPAN.INC.</p>
 </footer>
 </body>
</html>
