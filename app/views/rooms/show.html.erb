
<div class="room-show">
  <div class="room-detail">
   <table>
     <tr>
     <th><%= @room.picture %></th>
     </tr>
     <tr>
     <th><%= @room.name %></th>
     </tr>
     <tr>
     <th><%= @room.address %></th>
     </tr>
     <tr>
     <th><%= @room.introduction %></th>
     </tr>
   </table> 
  </div>

 <div class="reserve-container">
 <%= form_with model: @reservation do |f| %>
   <table>
     <tr>
      <th>¥<%= @room.price %>/日</th>
     </tr>
     <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
     </tr>
     <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
     </tr>
     <tr>
      <th><%= f.label :people, "人数" %></th>
      <td><%= f.number_field :people %></td>
     </tr>
     </table>
     
    <button class="actions">
     <ul>
      <li><%= f.submit "予約する"%></li>
     </ul>
    </button>
  <% end %>
 </div>
</div>
