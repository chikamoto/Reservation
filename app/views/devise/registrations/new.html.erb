<div class="container-devise"> 
 <div class="devise_frame">
  <h2>新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, placeholder: "ユーザー名", autofocus: true, autocomplete: "name" %>
    </div>
    
    <div class="field">
      <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
 </div>
</div>

