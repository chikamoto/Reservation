<div class="reservation-confirm">
<%= form_with model: @reservation, local: true do |f| %>
 <%= f.hidden_field :user_id, value: current_user.id %>
 <%= f.hidden_field :room_id, value: @room.id %>

<div class="confirm-container"> 
 <h4>予約内容確認</h4>
  <table>
   <tbody>
    <tr>
     <td><%= f.label :start, "開始日" %></td>
     <td><%= f.date_field :start, :readonly => true, class: 'form-control mb-4' %></td>
    </tr>
    <tr>
     <td><%= f.label :end, "終了日" %></td>
     <td><%= f.date_field :end, :readonly => true, class: 'form-control mb-4' %></td>
    </tr>
    <tr>
     <td><%= f.label :people, "人数" %></td>
     <td><%= f.number_field :people, :readonly => true %><span>円</span></td>
    </tr>
    <tr>
      <td><%= f.label :total_price, "合計金額" %></td>
      <td><%= f.number_field  :total_price, :readonly => true %><span>円</span></td>
    </tr>
    
   </tbody>
  </table>
   
</div>

      <%= f.submit "予約を確定する", class: "button is-success" %>
<% end %>
</div>
 
       
  
 
 